<!--index.wxml-->
<view class="container">
  <map id="ofoMap" style="{{styleText}}" latitude="{{latitude}}" longitude="{{longitude}}" scale="{{scale}}" bindregionchange="bindregionchange" polyline="{{polyline}}" markers="{{markers}}" controls="{{controls}}" bindmarkertap="bindmarkertap"  bindcontroltap="bindcontroltap" show-location/>
  <view class='menu' style='top:0;'>
    <rich-text nodes="{{nodes}}" bindtap="tap"></rich-text>
  </view>
  <cover-view class='menu'>
    <cover-view catchtap='testHandle' data-height='100%'>100%</cover-view>
    <cover-view catchtap='testHandle' data-height='90%'>90%</cover-view>
    <cover-view catchtap='testHandle' data-height='80%'>80%</cover-view>
    <cover-view catchtap='testHandle' data-height='70%'>70%</cover-view>
  </cover-view>
</view>
